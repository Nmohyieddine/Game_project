    <!--
        Added the constraints for entity Reponses.
    -->
    <changeSet id="20210726161013-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="idquestion_id"
                                 baseTableName="reponses"
                                 constraintName="fk_reponses_idquestion_id"
